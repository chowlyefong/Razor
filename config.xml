<?xml version="1.0" encoding="UTF-8"?>
    <widget xmlns = "http://www.w3.org/ns/widgets" id = "org.chowlyefong" versionCode = "1" version = "1.0.0" >
    <name>Razor</name>

    <description>
        Razor app for 2018 Digithon Challenge. Developed by Chow Lye Fong
    </description>

    <author href="https://my.linkedin.com/in/chowlyefong" email="chowlyefong@yahoo.com">
        Chow Lye Fong
    </author>
	<content src="index.html" />
	<!--<preference name="permissions" value="none" /> -->
	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" />
	
	<icon src="icon.png" />
	<plugin name="cordova-plugin-inappbrowser" spec="1.3.0" />
	<plugin name="cordova-plugin-device" spec="1.1.2" />
	<plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	
	<platform name="ios" />
	<platform name="android">
		<allow-intent href="tel:*" />
		<allow-intent href="sms:*" />
		<allow-intent href="mailto:*" />
		<allow-intent href="geo:*" />
	</platform>
	
	<plugin name="cordova-plugin-googlemaps" spec="2.0.0">
    <param name="API_KEY_FOR_ANDROID" value="AIzaSyASwH0oIUHsKbbzb0meiScc0QQ1-Ze5jTc" />
    <param name="API_KEY_FOR_IOS" value="AIzaSyASwH0oIUHsKbbzb0meiScc0QQ1-Ze5jTc" />
	</plugin>
	
	<plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <plugin name="cordova-plugin-media-capture" spec="~3.0.2" />
	<plugin name="cordova-plugin-media" spec="~5.0.2" />
	<!--
	<plugin name="phonegap-plugin-push" source="npm" spec="1.8.1">
    <variable name="SENDER_ID" value="my_firebase_id" />
	</plugin>
	-->

</widget>
